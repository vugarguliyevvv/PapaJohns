@using PizzaDelivery.Models
@model IEnumerable<Restaurant>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mehsullarin siyahisi</h4>
                <a asp-action="Create" class="btn btn-success mt-3">Yeni mehsul yarat</a>
                <a asp-action="DeletedList" class="btn btn-danger mt-3 ml-5">Silinen mehsullarin siyahisi</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Sekil
                                </th>
                                <th>
                                    Ad
                                </th>
                                <th>
                                    Adres
                                </th>
                                <th>
                                    İş saatları
                                </th>
                                <th>
                                    Ayarlar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @*<img src="~/assets/img/restaurant/@item.RestaurantImages.ElementAt(0).Images"/>*@
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Address
                                    </td>
                                    <td>
                                        @item.Hours
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="mdi mdi-information-variant"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="mdi mdi-settings"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

